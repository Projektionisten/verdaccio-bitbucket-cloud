{
  "compilerOptions": {
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "target": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "allowJs": false,
    "noImplicitAny": false,
    "strict": true,
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": [
    "src/*.ts",
    "types/*.ts"
  ]
}
